.flip-transition
    display block

.flip-enter
    animation flip-in 1s


.flip-leave
    animation flip-in 1s reverse





@keyframes flip-in
    0%
        // transform rotateY(90deg) skewY(20deg)
        transform rotateY(270deg) rotateX(-720deg) scale(0) translateX(1000px)
    80%
        // transform rotateY(0) skewY(0)
        transform rotateY(-90deg) rotateX(360deg) scale(1.1) translateX(-500px)
    100%
        transform rotateY(0) rotateX(0) scale(1) translateX(0)
